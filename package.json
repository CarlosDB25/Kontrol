{
  "name": "Kontrol",
  "version": "1.0.0",
  "description": "Sistema de control de productos e inventario",
  "author": "CarlosDB25",
  "main": "main/main.js",
  "homepage": "https://github.com/CarlosDB25/Kontrol",
  "scripts": {
    "start": "electron . --no-sandbox --disable-dev-shm-usage --disable-gpu-sandbox --disable-software-rasterizer --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-renderer-backgrounding --max-old-space-size=512",
    "start:fast": "electron . --no-sandbox --disable-web-security --disable-features=VizDisplayCompositor --disable-gpu --disable-software-rasterizer --max-old-space-size=256",
    "start:minimal": "electron . --no-sandbox --disable-gpu --disable-dev-shm-usage --disable-extensions --disable-plugins --disable-images --max-old-space-size=256",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win",
    "build:portable": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win portable",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.carlosdb25.kontrol",
    "productName": "Kontrol",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "src/**/*",
      "assets/**/*",
      "database/**/*",
      "ipc/**/*",
      "!src/css/brand.css",
      "!**/*.md",
      "!**/*.map",
      "!**/test/**",
      "!**/tests/**",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "database/kontrol.db",
        "to": "app/database/"
      }
    ],
    "win": {
      "icon": "assets/logo.ico",
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "selectPerMachineByDefault": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kontrol"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "sqlite3": "^5.1.6"
  }
}
